# Docker Environment Configuration
# Copy this file to .env in the project root and adjust values as needed

# App
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000

# Storage (container paths)
DATA_DIR=/app/data

# SQLite (async)
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# Qdrant (use service name for internal networking)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# Timeouts
HTTP_TIMEOUT_S=60
